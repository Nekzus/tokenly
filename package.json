{
	"name": "@nekzus/tokenly",
	"version": "0.0.0-development",
	"description": "A secure JWT token manager with HttpOnly cookie support for modern web applications",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "tsc",
		"prepare": "husky install",
		"lint": "biome check . --write --files-ignore-unknown=true",
		"format": "biome format . --write --files-ignore-unknown=true",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"commit": "git-cz",
		"semantic-release": "semantic-release --branches main"
	},
	"devDependencies": {
		"@types/jsonwebtoken": "9.0.7",
		"@types/node": "22.10.7",
		"@biomejs/biome": "1.9.4",
		"cz-conventional-changelog": "3.3.0",
		"husky": "9.1.7",
		"semantic-release": "24.2.1",
		"typescript": "5.7.3",
		"vitest": "3.0.2",
		"@commitlint/cli": "^19.6.1",
		"@commitlint/config-conventional": "^19.6.0",
		"@commitlint/cz-commitlint": "^19.6.1",
		"commitizen": "^4.3.1"
	},
	"dependencies": {
		"jsonwebtoken": "9.0.2"
	},
	"engines": {
		"node": ">=18"
	},
	"files": [
		"dist"
	],
	"keywords": [
		"jwt",
		"token",
		"authentication",
		"authorization",
		"cookie",
		"httponly",
		"security",
		"typescript",
		"oauth",
		"refresh token",
		"access token"
	],
	"author": "your-name",
	"license": "MIT",
	"directories": {
		"test": "tests"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/your-username/tokenly.git"
	},
	"bugs": {
		"url": "https://github.com/your-username/tokenly/issues"
	},
	"homepage": "https://github.com/your-username/tokenly#readme",
	"config": {
		"commitizen": {
			"path": "@commitlint/cz-commitlint"
		}
	},
	"publishConfig": {
		"access": "public"
	}
}
