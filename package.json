{
	"name": "tokenly",
	"version": "1.0.0",
	"description": "Secure JWT token manager with HttpOnly cookie support for modern web applications",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "tsc",
		"clean": "rimraf dist",
		"prebuild": "npm run clean",
		"test": "vitest",
		"test:coverage": "vitest run --coverage",
		"lint": "biome check .",
		"lint:fix": "biome check --apply .",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"prepare": "husky install",
		"commit": "cz"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"keywords": [
		"tokenly",
		"jwt",
		"token",
		"authentication",
		"httponly",
		"security",
		"cookie",
		"refresh-token",
		"access-token",
		"oauth"
	],
	"author": "Your Name",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/yourusername/tokenly.git"
	},
	"bugs": {
		"url": "https://github.com/yourusername/tokenly/issues"
	},
	"homepage": "https://github.com/yourusername/tokenly#readme",
	"devDependencies": {
		"@biomejs/biome": "1.5.3",
		"@commitlint/cli": "19.6.1",
		"@commitlint/config-conventional": "19.6.0",
		"@types/jsonwebtoken": "^9.0.0",
		"@types/node": "^20.0.0",
		"@vitest/coverage-v8": "^1.0.0",
		"commitizen": "^4.3.0",
		"cz-conventional-changelog": "^3.3.0",
		"dotenv": "^16.0.0",
		"husky": "8.0.3",
		"rimraf": "^5.0.0",
		"typescript": "^5.0.0",
		"vitest": "^1.0.0"
	},
	"dependencies": {
		"jsonwebtoken": "^9.0.0"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"engineStrict": true,
	"files": [
		"dist",
		"LICENSE",
		"README.md"
	],
	"publishConfig": {
		"access": "public"
	}
}
